<h1 align='center'>Index of all Categories</h1>
<div align='center'>
  <%= will_paginate %>
    <% @categories.each do |category| %>
      <ul class='listing'>
        <div class = 'row'>
          <div class='well col-md-4 col-md-offset-4'>
            <li class='article-title'>
              <%= link_to "#{category.name}", category_path(category), class: 'btn btn-info'%>
            </li>
            <li><small><%= pluralize(category.articles.count, 'article') %> </small></li>
          </div>
        </div>
      </ul>
      <p>hello</p>
    <% end %>
  <%= will_paginate  %>
</div>