<h1 align="center"><%= "#{@user.username.capitalize}'s" %> Blog</h1>
<div align="center">

  <% u = @user %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(u), u %></li>
          <li class="article-title">
            <%= link_to u.username, u %>
          </li>
          <li>
            <small><%= pluralize(u.articles.count, 'article') if u.articles %></small>
          </li>
        </div>
      </div>
    </ul>
    <%= will_paginate @user_articles%>
    <%= render 'articles/article', obj:@user_articles %>
    <%= will_paginate @user_articles%>
</div>