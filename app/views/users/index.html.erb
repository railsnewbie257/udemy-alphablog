<h1 align='center'>All Alpha Bloggers Index</h1>

<div align='center'>
  <%= will_paginate %>
  <%= @users.each do |u| %>
    <ul class='listing'>
      <div class='row'>
        <div class='well col-md-4 col-md-offset-4'>
          <%= link_to gravatar_for(u), user_path(u) if u.email %>
          <li class='article-title'>
            <%= link_to u.username, user_path(u) %>
          </li>
          <li><small><%= pluralize(u.articles.count, "article") if u.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
            <%= link_to 'Delete user', user_path(u), method: :delete, 
            data: {confirm: "Are you sure you want to delete the user and all their related articles?"},
            class:'btn btn-xs btn-danger'%>
          <% end %>
        </div>
      </div>
    </ul>
    <%= "hello" %>
  <% end %>
  <%= will_paginate %>
</div>